{
   "$id" : "#UserResponse",
   "$schema" : "http://json-schema.org/draft-07/schema",
   "description" : "A response for user GET request.",
   "type" : "object",
   "properties" : {
      "User" : {
         "$ref" : "#/definitions/_User_json"
      }
   },
   "required" : [
      "User"
   ],
   "definitions" : {
      "_UserPreference_json" : {
         "$id" : "#UserPreference",
         "$schema" : "http://json-schema.org/draft-07/schema",
         "description" : "The user preference object.",
         "type" : "object",
         "properties" : {
            "ID" : {
               "type" : "string",
               "readOnly" : true
            },
            "UserID" : {
               "type" : "integer",
               "readOnly" : true
            },
            "Value" : {
               "type" : "string",
               "readOnly" : true
            }
         },
         "required" : [
            "ID",
            "UserID",
            "Value"
         ]
      },
      "_User_json" : {
         "$id" : "#User",
         "$schema" : "http://json-schema.org/draft-07/schema",
         "description" : "The user object.",
         "type" : "object",
         "properties" : {
            "ChangeBy" : {
               "type" : "integer",
               "readOnly" : true
            },
            "ChangeTime" : {
               "type" : "string",
               "readOnly" : true
            },
            "CreateBy" : {
               "type" : "integer",
               "readOnly" : true
            },
            "CreateTime" : {
               "type" : "string",
               "readOnly" : true
            },
            "Preferences" : {
               "description" : "added via include \"Preferences\"",
               "type" : "array",
               "item" : {
                  "$ref" : "#/definitions/_UserPreference_json"
               }
            },
            "RoleIDs" : {
               "description" : "added via include \"RoleIDs\"",
               "type" : "array",
               "item" : {
                  "type" : "integer"
               }
            },
            "UserComment" : {
               "anyOf" : [
                  {
                     "type" : "string"
                  },
                  {
                     "type" : "null"
                  }
               ],
               "readOnly" : true
            },
            "UserID" : {
               "type" : "integer",
               "readOnly" : true
            },
            "UserLogin" : {
               "type" : "string",
               "readOnly" : true
            },
            "ValidID" : {
               "type" : "integer",
               "readOnly" : true
            }
         },
         "required" : [
            "ChangeBy",
            "ChangeTime",
            "CreateBy",
            "CreateTime",
            "UserID",
            "UserLogin"
         ]
      }
   }
}
