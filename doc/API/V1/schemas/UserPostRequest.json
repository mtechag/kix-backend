{
   "$id" : "#UserPostRequest",
   "$schema" : "http://json-schema.org/draft-07/schema",
   "description" : "The user request object for creation.",
   "type" : "object",
   "properties" : {
      "User" : {
         "type" : "object",
         "properties" : {
            "Preferences" : {
               "type" : "array",
               "item" : {
                  "$ref" : "UserPreferencePostItem.json"
               }
            },
            "RoleIDs" : {
               "type" : "array",
               "item" : {
                  "type" : "integer"
               }
            },
            "UserComment" : {
               "type" : "string"
            },
            "UserEmail" : {
               "type" : "string"
            },
            "UserFirstname" : {
               "type" : "string"
            },
            "UserLastname" : {
               "type" : "string"
            },
            "UserLogin" : {
               "type" : "string"
            },
            "UserMobile" : {
               "type" : "string"
            },
            "UserPhone" : {
               "type" : "string"
            },
            "UserPw" : {
               "type" : "string"
            },
            "UserTitle" : {
               "type" : "string"
            },
            "ValidID" : {
               "type" : "integer"
            }
         },
         "required" : [
            "UserLogin",
            "UserFirstname",
            "UserLastname",
            "UserEmail"
         ]
      }
   },
   "required" : [
      "User"
   ]
}
