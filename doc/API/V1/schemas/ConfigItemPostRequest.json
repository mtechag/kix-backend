{
  "$schema": "http://json-schema.org/schema",
  "$id": "#ConfigItemPostRequest",
  "type": "object",
  "description": "The config item object for creation.",
  "properties": {
    "ConfigItem": {
      "type": "object",
      "properties": {
        "ClassID": {
          "type": "number"
        },    
        "Version": {
          "type": "object",
          "$ref": "#ConfigItemVersionPostRequest"
        },
        "Images": {
          "type": "array",
          "item": {
            "$ref": "#ConfigItemImagePostRequest"
          }
        }
      },
      "required": [
        "ClassID",
        "Version"
      ]
    }
  },
  "required": [
    "ConfigItem"
  ]
}