{
   "$id" : "#RolePostRequest",
   "$schema" : "http://json-schema.org/draft-07/schema",
   "description" : "The role request object for creation.",
   "type" : "object",
   "properties" : {
      "Role" : {
         "type" : "object",
         "properties" : {
            "Comment" : {
               "type" : "string"
            },
            "Name" : {
               "type" : "string"
            },
            "Permissions" : {
               "type" : "array",
               "item" : {
                  "$ref" : "PermissionPostItem.json"
               }
            },
            "UserIDs" : {
               "type" : "array",
               "item" : {
                  "type" : "integer"
               }
            },
            "ValidID" : {
               "type" : "integer"
            }
         },
         "required" : [
            "Name",
            "ValidID"
         ]
      }
   },
   "required" : [
      "Role"
   ]
}
