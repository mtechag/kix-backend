{
  "$schema": "http://json-schema.org/schema",
  "$id": "#UserPostRequest",
  "type": "object",
  "description": "The user request object for creation.",
  "properties": {
    "User": {
      "type": "object",
      "properties": {
        "Preferences": {
          "type": "array",
          "item": {
            "$ref": "UserPreferencePostItem.json"
          }
        },    
        "UserEmail": {
          "type": "string"
        },
        "UserFirstname": {
          "type": "string"
        },
        "UserLastname": {
          "type": "string"
        },
        "UserLogin": {
          "type": "string"
        },
        "UserPw": {
          "type": "string"
        },
        "UserTitle": {
          "type": "string"
        },
        "RoleIDs": {
          "type": "array",
          "item": {
            "type": "integer"
          }
        },
        "ValidID": {
          "type": "integer"
        }
      },
      "required": [
        "UserLogin",
        "UserFirstname",
        "UserLastname",
        "UserEmail"
      ]
    }
  },
  "required": [
    "User"
  ]
}