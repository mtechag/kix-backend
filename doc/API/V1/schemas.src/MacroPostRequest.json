{
  "$schema": "http://json-schema.org/schema",
  "$id": "#MacroPostRequest",
  "type": "object",
  "description": "The macro request object for creation.",
  "properties": {
    "Macro": {
      "type": "object",
      "properties": {
        "Actions": {
          "type": "array",
          "item": {
            "$ref": "MacroActionPostItem.json"
          }
        },
        "Comment": {
          "type": "string"
        },
        "Name": {
          "type": "string"
        },
        "Type": {
          "type": "string",
          "description": ""
        },
        "ValidID": {
          "type": "integer"
        }
      },
      "required": [
        "Name",
        "Type"
      ]
    }
  },
  "required": [
    "Macro"
  ]
}