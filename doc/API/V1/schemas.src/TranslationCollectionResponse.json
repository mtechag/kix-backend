{
  "$schema": "http://json-schema.org/schema",
  "$id": "#TranslationCollectionResponse",
  "type": "object",
  "description": "A list of translations.",
  "properties": {
    "Translation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Languages": {
            "type": "object",
            "patternProperties": {
              "^[0-9]+$": {
                "type": "string",
                "readOnly": true
              }
            }
          },
          "Pattern": {
            "type": "string",
            "readOnly": true
          }
        },
        "required": [
          "Languages",
          "Pattern"
        ]
      }
    }
  },
  "required": [
    "Translation"
  ]
}