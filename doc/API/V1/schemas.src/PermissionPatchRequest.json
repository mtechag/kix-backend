{
  "$schema": "http://json-schema.org/schema",
  "$id": "#PermissionPatchRequest",
  "type": "object",
  "description": "The permission request object for update.",
  "properties": {
    "Permission": {
      "type": "object",
      "properties": {
        "Comment": {
          "type": "string"
        },
        "Target": {
          "type": "string"
        },
        "Value": {
          "type": "integer",
          "description": "bitmask, please see documentation for bit descriptions"
        }
      }
    }
  },
  "required": [
    "Permission"
  ]
}