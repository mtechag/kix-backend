{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "#TicketStatePostRequest",
  "type": "object",
  "description": "The ticket state request object for creation.",
  "properties": {
    "TicketState": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string"
        },
        "Comment": {
          "type": "string"
        },
        "TypeID": {
          "type": "integer"
        },
        "ValidID": {
          "type": "integer"
        }
      },
      "required": [
        "Name",
        "TypeID"
      ]    
    }
  },
  "required": [
    "TicketState"
  ]
}